{{#when order}}
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Last change</th>
            <th>Status</th>
            <th>Created</th>
            <th>Customer</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each order}}
        <tr>
            <td>{{id}}</td>
            <td>{{lastChange}}</td>
            <td>{{status}}</td>
            <td>{{created}}</td>
            <td><a href="#!f/customer/{{customerId}}">{{customerName}}</a></td>
            <td><a href="#!f/order/{{id}}">View order details<a/></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
No orders.
{{/when}}
