<h3>Products</h3>
<table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    {{#each product}}
    <tr>
        <td>{{name}}</td>
        <td><input type="text" name="" value="{{quantity}}"></td>
        <td>{{price}}</td>
        <td><a href="#">Remove</a></td>
    </tr>
    {{/each}}
</table>

<h4>Add product</h4>
<select>
{{#each all}}
<option>{{name}}</option>
{{/each}}
</select>
<input type="text">
<button>Add product</button>

<br>
<br>

<div>
<input type="submit">
</div>

