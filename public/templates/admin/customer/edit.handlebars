
<div>
Name
<input type="text" name="name" value="{{name}}">
</div>

<div>
Street address
<input type="text" name="address" value="{{address}}">
</div>

<div>
Latitude
<input type="text" name="latitude" value="{{latitude}}">
</div>

<div>
Longitude
<input type="text" name="longitude" value="{{longitude}}">
</div>

<div>
TIN
<input type="text" name="tin" value="{{tin}}">
</div>

<div>
Phone
<input type="text" name="phone" value="{{phone}}">
</div>

<div>
Active
<input type="checkbox"{{#if isActive}} checked{{/if}} name="is-active">
</div>

<div>
Area: 
<select name="area">
    {{#each area}}
    <option value="{{id}}">{{name}}</option>
    {{/each}}
</select>
</div>

<div>
Price category: 
<select name="price-category">
    {{#each priceCat}}
    <option value="{{id}}">{{name}}</option>
    {{/each}}
</select>
</div>

{{#if contact}}
<table>
{{#each contact}}
<tr>
    <td>{{kind}}</td>
    <td>{{datum}}</td>
    <td>{{meta}}</td>
    <td><a href="#contact/{{id}}/edit">Edit</a></td>
    <td><a href="#contact/{{id}}/delete">Delete</a></td>
{{/each}}
</table>
{{else}}
- No contacts -
{{/if}}
<a href="#contact/customer/{{id}}/create">Add a contact</a>

